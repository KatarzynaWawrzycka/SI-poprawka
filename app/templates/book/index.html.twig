{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.book_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.book_list'|trans }}</h1>
    {% if books is defined and books|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.totalPages'|trans }}</th>
                <th>{{ 'label.rating'|trans }}</th>
                <th>{{ 'label.isbn'|trans }}</th>
                <th>{{ 'label.publishedDate'|trans }}</th>
                <th>{{ 'label.genreId' }}</th>
                <th>{{ 'label.authorsId'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.id }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.totalPages }}</td>
                    <td>{{ book.rating }}</td>
                    <td>{{ book.isbn }}</td>
                    <td>{{ book.publishedDate }}</td>
                    <td>{{ book.genre.id }}</td>
                    <td>
                        {%  for author in book.authors %}
                            {{ author.lastName }}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="{{ url('book_show', {id: book.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}